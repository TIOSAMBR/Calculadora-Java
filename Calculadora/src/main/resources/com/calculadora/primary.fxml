<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="246.0" prefWidth="214.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.calculadora.PrimaryController">
    <TextField fx:id="tela" prefHeight="40.0" prefWidth="0.0" />

    <VBox spacing="5.0">
        <HBox spacing="5.0">
            <Button fx:id="um" onAction="#adicionarNumero" prefHeight="45.0" prefWidth="47.0" text="1" />
            <Button fx:id="dois" onAction="#adicionarNumero" prefHeight="42.0" prefWidth="45.0" text="2" />
            <Button fx:id="tres" onAction="#adicionarNumero" prefHeight="43.0" prefWidth="41.0" text="3" />
            <Button fx:id="mais" onAction="#adicionarOperacao" prefHeight="42.0" prefWidth="49.0" text="+" />
        </HBox>

        <HBox spacing="5.0">
            <Button fx:id="quatro" onAction="#adicionarNumero" prefHeight="40.0" prefWidth="48.0" text="4" />
            <Button fx:id="cinco" onAction="#adicionarNumero" prefHeight="41.0" prefWidth="44.0" text="5" />
            <Button fx:id="seis" onAction="#adicionarNumero" prefHeight="42.0" prefWidth="49.0" text="6" />
            <Button fx:id="menos" onAction="#adicionarOperacao" prefHeight="41.0" prefWidth="43.0" text="-" />
        </HBox>

        <HBox prefHeight="52.0" prefWidth="215.0" spacing="5.0">
            <Button fx:id="oito" onAction="#adicionarNumero" prefHeight="46.0" prefWidth="48.0" text="8" />
            <Button fx:id="nove" onAction="#adicionarNumero" prefHeight="46.0" prefWidth="48.0" text="9" />
            <Button fx:id="sete" onAction="#adicionarNumero" prefHeight="46.0" prefWidth="47.0" text="7" />
            <Button fx:id="vezes" onAction="#adicionarOperacao" prefHeight="46.0" prefWidth="42.0" text="*" />
        </HBox>
    </VBox>

     <HBox prefHeight="43.0" prefWidth="223.0" spacing="5.0">
         <Button fx:id="ac" onAction="#limpar" prefHeight="46.0" prefWidth="48.0" text="AC" />
         <Button fx:id="zero" onAction="#adicionarNumero" prefHeight="47.0" prefWidth="44.0" text="0" />
         <Button fx:id="igual" onAction="#calcular" prefHeight="46.0" prefWidth="48.0" text="=" />
         <Button fx:id="dividido" onAction="#adicionarOperacao" prefHeight="44.0" prefWidth="43.0" text="/" />
     </HBox>
</VBox>
